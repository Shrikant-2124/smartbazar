<%-include('navbar.ejs')%>

<br><br>
<div>
        
            <div class="container">
                <div class="row no-gutters">
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <!-- Product Slider -->
                            <div class="product-gallery">
                                <div class="quickview-slider-active">
                                    <div class="single-slider">
                                        <img src="/uploads/<%=product_info.product_image1%>" alt="#">
                                    </div>
                                    <div class="single-slider">
                                        <img src="/uploads/<%=product_info.product_image2%>" alt="#">
                                    </div>
                                    <div class="single-slider">
                                        <img src="/uploads/<%=product_info.product_image3%>" alt="#">
                                    </div>
                                    
                                </div>
                            </div>
                        <!-- End Product slider -->
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <form action="/add_to_cart" method="post">
                            
                            <input type="hidden" name="product_id" value="<%=product_info.product_id%>">

                        <div class="quickview-content">
                            <h2><%=product_info.product_name%></h2>
                            <span><%=product_info.product_category_name%></span>
                            <!-- <div class="quickview-ratting-review">
                                <div class="quickview-ratting-wrap">
                                    <div class="quickview-ratting">
                                        <i class="yellow fa fa-star"></i>
                                        <i class="yellow fa fa-star"></i>
                                        <i class="yellow fa fa-star"></i>
                                        <i class="yellow fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <a href="#"> (1 customer review)</a>
                                </div>
                                <div class="quickview-stock">
                                    <span><i class="fa fa-check-circle-o"></i> in stock</span>
                                </div>
                            </div> -->
                            <h3>₹<%=product_info.product_price%>/-&nbsp;<small><del>₹<%=product_info.product_dup_price%></del></small>
                            </h3>
                            <div class="quickview-peragraph">
                                <p><%=product_info.product_info%></p>
                            </div>
                            <div class="size">
                                <div class="row">
                                    <div class="col-lg-6 col-12">
                                        <h5 class="title">Size : <%=product_info.product_size%> </h5>
                                       
                                    </div>
                                    <div class="col-lg-6 col-12">
                                        
                                        <h5 class="title">Color: <button type="button" style="background-color :<%= product_info.product_color %>">&emsp;&emsp;&emsp;&emsp;</button></h5>

                                        
                                    </div>
                                </div>
                            </div>
                            <div class="quantity">
                                <!-- Input Order -->
                                <div class="input-group">
                                    <div class="button minus">
                                        <button type="button" class="btn btn-primary btn-number" disabled="disabled" data-type="minus" data-field="quant">
                                            <i class="ti-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" name="quant" class="input-number"  data-min="1" data-max="1000" value="1">
                                    <div class="button plus">
                                        <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant">
                                            <i class="ti-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <!--/ End Input Order -->
                            </div>
                            <div class="add-to-cart">
                                <button class="btn">Add to cart</button>
                            </div>
                            <div class="default-social">
                                <h4 class="share-now">Share:</h4>
                                <ul>
                                    <li><a class="facebook" href="https://facebook.com"><i class="fa fa-facebook"></i></a></li>
                                    <li><a class="twitter" href="https://twitter.com"><i class="fa fa-twitter"></i></a></li>
                                    <li><a class="youtube" href="https://wa.me/+919421833069"><i class="fa fa-whatsapp"></i></a></li>
                                    <li><a class="dribbble" href="https://linkedin.com"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
</div>


