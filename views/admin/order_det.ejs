<div class="col-md-12 subname">
    <h3>Order information</h3>
</div>

<div class="col-md-12">

<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
        <tr class="top">
            <td colspan="2">
                <table>
                    <tr>
                        <td class="title">
                            <img src="https://serving.photos.photobox.com/82671138356e156fe17271552585039f1612b330d9741b58284e2bf05756674b27614c59.jpg">
                            
                        </td>
                        
                        <td>
                            Invoice #:GSK-<%=order_info[0].order_id%><br>
                            Created: <%=order_info[0].order_date%><br>
                           
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        
        <tr class="information">
            <td colspan="2">
                <table>
                    <tr>
                        <td>
                            <%=order_info[0].address1%><br>
                            <%=order_info[0].address2%><br>
                            <%=order_info[0].state%>-<%=order_info[0].postal%>
                        </td>
                        
                        <td>
                            <%=order_info[0].fname%>
                            <%=order_info[0].lname%><br>
                            <%=order_info[0].mobile%><br>
                            <%=order_info[0].email%><br>
                            
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        
        <tr class="" style="font-weight: bold; padding: 10px; background-color: #d0c8c8;">
            <td style="text-transform: uppercase; padding: 10px; ">
                <%=order_info[0].payment_type %> Payment
            </td>
            
            <td  >
                <%=(order_info[0].payment_status=='success')? 'RECEIVED':'PENDING' %>
                <% if(order_info[0].payment_status=='success'  && order_info[0].Business_payment_status== ''  ) { %>
                    
                    <a href="/admin/transfer_to_business/<%=order_info[0].order_id%>">
                    <button class="btn btn-success btn-sm"
                     style="border-radius: 5px;">Transfer To Business
                    </button>
                </a>
    
               <%  }
               
               if(order_info[0].Business_payment_status != '')
                {
                    %>
                    <span>Already Done</span>
                    <%
                }

               %>
            </td>
        </tr>
    </table>
    <table cellpadding="0" cellspacing="0" class="table table-bordered text-center mt-1">

        <tr class="bg-warning">
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>

        <%  for(var i=0;i<order_info.length;i++)  {  %>


            <tr >
                <td><%=order_info[i].product_name%></td>
                <td class="text-center">₹<%=order_info[i].product_price%></td>
                <td><%=order_info[i].qty%> qty</td>
                <td class="fw-bold">₹<%=order_info[i].order_price%></td>
                
            </tr>
            
           <%   }  %> 


    </table>











</div>

<center>
<div class="btn btn-primary btn-md p-2 m-2 ps-5 pe-5" onclick="printpage()" ><i class="fa fa-print"></i>  Print</div>
</center>



</div>


