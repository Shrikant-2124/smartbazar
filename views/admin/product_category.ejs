<%-include('navbar.ejs') %>

<style>
    .subname h3
    {
        /* background-image: linear-gradient(90deg,red 0%,yellow 50%, orange 10%); */


        background-color: #FFFFFF;
        background-image: -webkit-linear-gradient(92deg, #FFFFFF 0%, #6284FF 33%, #FF0000 97%);
        background-image: -moz-linear-gradient(92deg, #FFFFFF 0%, #6284FF 33%, #FF0000 97%);
        background-image: -o-linear-gradient(92deg, #FFFFFF 0%, #6284FF 33%, #FF0000 97%);
        background-image: linear-gradient(92deg, #FFFFFF 0%, #6284FF 33%, #FF0000 97%);




        padding-left: 10px;
        padding-top: 5px;
        padding-bottom: 5px;
        font-size: 32px;
    }
    .aaa
    {
        text-decoration: none;
        margin-left: 5px;
    }
    .aaa button 
    {
        border-radius: 5px;
    }
